{
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          { "command": "nx serve webapp" },
          { "command": "nx serve api" }
        ]
      }
    },
    "prettier": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          { "command": "nx lint webapp" },
          { "command": "nx lint api" }
        ]
      }
    }
  }
}
